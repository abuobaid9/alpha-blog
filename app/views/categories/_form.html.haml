= render 'shared/errors', obj: @category
= simple_form_for @category, html: { class: "shadow p-3 mb-3 bg-info rounded" } do |f|
  = f.input :name, label: "Category name", input_html: { class: "form-control shadow rounded", placeholder: "Enter a name" }
  .form-group.row.justify-content-center
    = f.button :submit, class: "btn btn-outline-light btn-lg"
